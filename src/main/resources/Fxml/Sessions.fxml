<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="479.0" prefWidth="745.0" stylesheets="@../css/style.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.esprit.javafxproject.SessionController">
   <children>
      <VBox layoutY="110.0" prefHeight="300.0" prefWidth="300.0" spacing="10.0" AnchorPane.leftAnchor="5.0" AnchorPane.topAnchor="110.0">
         <children>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Cap" />
            <TextField fx:id="tCap" styleClass="text-field" />
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Des" />
            <TextField fx:id="tDes" styleClass="text-field" />
         </children>
      </VBox>
      <TableView fx:id="table" layoutX="393.0" layoutY="120.0" onMouseClicked="#getData" prefHeight="200.0" prefWidth="394.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="120.0">
        <columns>
            <TableColumn fx:id="colid" prefWidth="75.0" text="ID" />
            <TableColumn fx:id="colcap" prefWidth="75.0" text="Cap" />
            <TableColumn fx:id="coldes" prefWidth="75.0" text="Des" />
        </columns>
      </TableView>
      <Label alignment="CENTER" layoutX="300.0" layoutY="30.0" text="CRUD Session" />
      <ButtonBar layoutX="243.0" layoutY="377.0" prefHeight="40.0" prefWidth="382.0">
        <buttons>
          <Button fx:id="btnSave" mnemonicParsing="false" onAction="#createSession" text="Save" />
            <Button fx:id="btnUpdate" layoutX="135.0" layoutY="18.0" mnemonicParsing="false" onAction="#updateSession" text="Update" />
            <Button fx:id="btnDelete" layoutX="135.0" layoutY="18.0" mnemonicParsing="false" onAction="#deleteSession" text="Delete" />
            <Button fx:id="btnClear" layoutX="200.0" layoutY="18.0" mnemonicParsing="false" onAction="#clearfield" text="Clear" />
        </buttons>
      </ButtonBar>
   </children>
</AnchorPane>
